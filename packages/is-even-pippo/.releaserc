{
    "branches": ["main"],
    "tagFormat": "is-even-pippo@${version}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",{
        "releaseRules": [
          { "breaking": true, "scope": "/is-even-pippo*/", "release": "major" },
          { "type": "feat", "scope": "/is-even-pippo*/", "release": "minor" },
          { "type": "docs", "scope": "/is-even-pippo*/", "release": "patch" },
          { "type": "refactor", "scope": "/is-even-pippo*/", "release": "patch" },
          { "type": "style", "scope": "/is-even-pippo*/","release": "patch" },
          { "revert": true, "scope": "/is-even-pippo*/", "release": "patch" },
          { "type": "fix", "scope": "/is-even-pippo*/", "release": "patch" },
          { "type": "ci", "scope": "/is-even-pippo*/", "release": "patch"}
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
    }],
        "@semantic-release/release-notes-generator",
        "@semantic-release/npm",
        [
            "@semantic-release/github",
            {
              "assets": ["dist/**"]
            }
          ],
          "@semantic-release/git"
    ]
}